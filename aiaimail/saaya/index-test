<script>
$(function(){

	$("#header").on("click",function(){
		if( $("#keypad").length ){
			$("#keypad").fadeOut(30).remove();
		}else{
			$('<div id="keypad"><div class="relative"><img src="file:///I:/%E3%83%9E%E3%82%A4%E3%83%89%E3%83%A9%E3%82%A4%E3%83%96/dragonpoo/d-match-main/files/keypad.png" /><i></i></div></div>')
			.appendTo("body").hide().fadeIn(30);			

			setInterval(function(){
				$("#keypad i").fadeOut(300,function(){$(this).fadeIn(300)});
			},300);

		}
	});
});

</script>

